<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Font">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Font.Bold">
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Medium">
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Regular">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Semibold">
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Thin">
        <item name="android:fontFamily">@font/notosans_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Thin.Button">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Font.Semibold.Button">
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Font.Bottomsheet_Title">
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Font.Bottomsheet_Desc">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>