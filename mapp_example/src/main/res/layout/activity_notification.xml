<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.notification.NotificationActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="10dp"
    android:gravity="center">

    <com.fadlurahmanf.mapp_ui.presentation.custom.MappButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="CHECK PERMISSION"
        style="@style/Font.Semibold.Button"
        android:id="@+id/btn_notification_permission"/>

    <com.fadlurahmanf.mapp_ui.presentation.custom.MappButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="SIMPLE NOTIFICATION"
        android:layout_marginTop="10dp"
        style="@style/Font.Semibold.Button"
        android:id="@+id/btn_show_notification"/>

    <com.fadlurahmanf.mapp_ui.presentation.custom.MappButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="IMAGE NOTIFICATION"
        android:layout_marginTop="10dp"
        style="@style/Font.Semibold.Button"
        android:id="@+id/btn_show_image_notification"/>

</LinearLayout>