    <View
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1" />

    <View
        android:id="@+id/v_pin_6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/background_pin" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="2" />

