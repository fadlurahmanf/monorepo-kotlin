<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_1"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_2"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_3"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="3" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_4"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="4" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_5"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="5" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_6"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="6 " />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_7"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="7" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_8"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="8" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_9"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="9" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_forgot_pin"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:fontFamily="@font/lexend_deca_semi_bold"
            android:gravity="center"
            android:text="Lupa \nPIN?"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_0"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_pin"
            android:gravity="center"
            android:text="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_delete"
            style="@style/Font.PinText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_circle_border_black"
            android:gravity="center"
            android:padding="23dp"
            android:src="@drawable/outline_backspace_24" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>